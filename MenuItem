         />
        
      </View>
    )
  }
}


const styles = StyleSheet.create({
  menuitem:{
    width:'33.3333%',
    height:'50%' ,
    padding:28,
    borderRadius: 150/2,
    backgroundColor: 'lightgrey'
  },
  image:{
    width:'100%',
    height:'100%',
    opacity:0.8,
    borderColor:'#fff',
    borderWidth: 3,
  },
})
